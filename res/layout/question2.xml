<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/uploadFile"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/writeMessage"
        android:layout_marginRight="60dp"
        android:src="@drawable/dosya" />

    <ImageButton
        android:id="@+id/writeMessage"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="162dp"
        android:layout_toRightOf="@+id/linearLayout1"
        android:src="@drawable/metin" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/writeMessage"
        android:layout_below="@+id/writeMessage"
        android:layout_marginTop="14dp"
        android:text="MESAJ GIZLE" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/uploadFile"
        android:text="DOSYA GIZLE" />

</RelativeLayout>